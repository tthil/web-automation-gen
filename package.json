{
  "name": "web-automation-gen",
  "version": "1.0.0",
  "description": "Web automation tool for recording and replaying browser sessions using Playwright",
  "main": "dist/server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "tsc",
    "dev": "nodemon",
    "debug": "node --inspect -r ts-node/register src/server.ts",
    "debug:watch": "nodemon --config nodemon.json",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "automation",
    "playwright",
    "web",
    "browser",
    "codegen",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0"
  }
}
